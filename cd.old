name: CD - Build & Deploy

on:
  #workflow_run:
  #  workflows: ["CI - Test"]
  #  types: [completed]
  #  branches: [main, master, feature/ci-cd]
  #workflow_dispatch:
  push:
    branches: [main, master, feature/ci-cd]
  pull_request:
    branches: [main, master, feature/ci-cd]

env:
  REGISTRY: ghcr.io
  IMAGE_NAME_HUB: ${{ github.repository_owner }}/bomberman-hub
  IMAGE_NAME_ROOM: ${{ github.repository_owner }}/bomberman-room

jobs:
  # ============================================
  # Build and Push (GitHub infrastructure)
  # ============================================
  build-and-push:
    runs-on: ubuntu-latest
    # Only run if CI workflow succeeded
    if: >-
      ${{
        github.event.workflow_run.conclusion == 'success' &&
        github.event.workflow_run.event == 'push'
      }}

    permissions:
      contents: read
      packages: write

    outputs:
      image_tag: ${{ steps.vars.outputs.short_sha }}

    steps:
      # workflow_run triggers on a different SHA, we need the original commit
      - uses: actions/checkout@v4
        with:
          ref: ${{ github.event.workflow_run.head_sha }}

      - name: Set output variables
        id: vars
        run: echo "short_sha=$(git rev-parse --short HEAD)" >> $GITHUB_OUTPUT

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      # --- Hub Image ---
      - name: Extract metadata (Hub)
        id: meta-hub
        uses: docker/metadata-action@v5
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME_HUB }}
          tags: |
            type=raw,value=latest,enable={{is_default_branch}}
            type=sha,prefix=,format=short

      - name: Build and push Hub image
        uses: docker/build-push-action@v5
        with:
          context: .
          file: docker/Dockerfile.hub
          push: true
          tags: ${{ steps.meta-hub.outputs.tags }}
          labels: ${{ steps.meta-hub.outputs.labels }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

      # --- Room Image ---
      # - name: Extract metadata (Room)
      #   id: meta-room
      #   uses: docker/metadata-action@v5
      #   with:
      #     images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME_ROOM }}
      #     tags: |
      #       type=raw,value=latest,enable={{is_default_branch}}
      #       type=sha,prefix=,format=short

      # - name: Build and push Room image
      #   uses: docker/build-push-action@v5
      #   with:
      #     context: .
      #     file: docker/Dockerfile.room
      #     push: true
      #     tags: ${{ steps.meta-room.outputs.tags }}
      #     labels: ${{ steps.meta-room.outputs.labels }}
      #     cache-from: type=gha
      #     cache-to: type=gha,mode=max

  # ============================================
  # Deploy (Self-hosted runner on your VM)
  # ============================================
  deploy:
    needs: build-and-push
    runs-on: self-hosted

    env:
      KUBECONFIG: /var/snap/microk8s/current/credentials/client.config

    steps:
      - uses: actions/checkout@v4
        with:
          ref: ${{ github.event.workflow_run.head_sha }}

      - name: Pull images from GHCR
        run: |
          echo "${{ secrets.GITHUB_TOKEN }}" | docker login ghcr.io -u ${{ github.actor }} --password-stdin
          docker pull ${{ env.REGISTRY }}/${{ env.IMAGE_NAME_HUB }}:latest
          # docker pull ${{ env.REGISTRY }}/${{ env.IMAGE_NAME_ROOM }}:latest

      - name: Import images to microk8s
        run: |
          docker save ${{ env.REGISTRY }}/${{ env.IMAGE_NAME_HUB }}:latest | microk8s ctr image import -
          microk8s ctr images tag ghcr.io/${{ env.IMAGE_NAME_HUB }}:latest docker.io/library/bomberman-hub:latest
          # docker save ${{ env.REGISTRY }}/${{ env.IMAGE_NAME_ROOM }}:latest | microk8s ctr image import -

      - name: Deploy to microk8s
        run: |
          # Create namespace if not exists
          microk8s kubectl apply -f k8s/base/namespace.yaml

          # Apply Hub components
          microk8s kubectl apply -f k8s/base/hub/configmap.yaml
          microk8s kubectl apply -f k8s/base/hub/rbac.yaml
          microk8s kubectl apply -f k8s/base/hub/statefulset.yaml
          microk8s kubectl apply -f k8s/base/hub/service.yaml
          microk8s kubectl apply -f k8s/base/hub/ingress.yaml

          # Restart pods to pick up new image
          microk8s kubectl rollout restart statefulset/hub -n bomberman

      - name: Wait for rollout
        run: |
          microk8s kubectl rollout status statefulset/hub -n bomberman --timeout=300s

      - name: Verify deployment
        run: |
          echo "=== Pod Status ==="
          microk8s kubectl get pods -n bomberman -o wide
          echo ""
          echo "=== Services ==="
          microk8s kubectl get svc -n bomberman
          echo ""
          echo "=== Deployment successful! ==="